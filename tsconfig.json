{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "jsx": "react",
        "allowSyntheticDefaultImports": true, // what the fuck is this?
        "noImplicitAny": true,
        "sourceMap": true,
        "rootDir": "App",
        "outDir": "build",
        "experimentalDecorators": true,
        "preserveConstEnums": true
    },
    "filesGlob": [
        "typings/index.d.ts", // determins which files to watch?
        "App/**/*.ts",
        "App/**/*.tsx"
    ],
	"exclude": [
		"index.android.js",
		"index.ios.js",
		"build",
		"node_modules"
	],
    "compileOnSave": false
}